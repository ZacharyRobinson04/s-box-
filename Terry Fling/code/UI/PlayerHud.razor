@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent

<root>
	<div class="Scores">
		<div class="Leftside">
			<p>@score.redPoints</p>
		</div>
		<div class="Rightside">
			<p>@score.bluePoints</p>
		</div>
	</div>
</root>

@code
{
	[Property] Score score {get; set;}
	/// <summary>
	/// the hash determines if the system should be rebuilt. If it changes, it will be rebuilt
	/// </summary>
	protected override int BuildHash() => System.HashCode.Combine( score.redPoints, score.bluePoints);
}